<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_bottom_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40">

        <TextView
            android:id="@+id/dialog_bottom_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_3700B3"
            android:textSize="@dimen/textsize_14"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            />
        <TextView
            android:id="@+id/dialog_bottom_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_3700B3"
            android:textSize="@dimen/textsize_14"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/dialog_bottom_finish_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_3700B3"
            android:textSize="@dimen/textsize_14"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/dialog_title_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0_5"
        android:background="@color/color_E5E5E5"/>
    <FrameLayout
        android:id="@+id/dialog_bottom_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>